@page
@model AspNetCore7.Pages.Instructors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Instructor</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].OfficeAssignment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor[0].Courses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Instructor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeAssignment.Location)
            </td>
            <td>
                @foreach (var course in item.Courses) {
                    @Html.DisplayFor(modelItem => course.Title)
                    <br />
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
